<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.asus.news.SearchActivity">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/toolbar"
    android:background="@color/colorPrimary"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/back"
        android:src="@drawable/ra"
        android:padding="5dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/back"
        android:text="搜索"
        android:layout_centerVertical="true"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"/>
</RelativeLayout>
</android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/search_bar"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fb_tv_bg"
            android:layout_height="56dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/saaj"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:padding="12dp"
                android:onClick="search"
                android:src="@drawable/aaj"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="5dp"
                android:padding="12dp"
                android:id="@+id/code"
                android:layout_alignParentRight="true"
                android:src="@drawable/aal"/>
            <EditText
                android:layout_toLeftOf="@+id/code"
                android:layout_toRightOf="@+id/saaj"
                android:layout_width="match_parent"
                android:id="@+id/edit_keywords"
                android:hint="请输入关键字..."
                android:layout_centerVertical="true"
                android:layout_height="48dp" />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ab4"
                android:visibility="gone"
                android:onClick="delete"
                android:id="@+id/delete_words"

                android:layout_toLeftOf="@+id/code"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/search_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
