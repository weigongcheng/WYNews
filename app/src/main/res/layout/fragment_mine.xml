<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#02000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:id="@+id/head_layout"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:orientation="vertical"
       android:background="@color/colorPrimary">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="48dp">
           <TextView
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:text="设置"
               android:layout_marginRight="10dp"
               android:gravity="center"
               android:id="@+id/tv"
               android:textColor="@color/colorWhite"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               />
           <ImageView
               android:layout_width="18dp"
               android:layout_height="18dp"
               android:padding="2dp"
               android:layout_toLeftOf="@+id/tv"
               android:src="@drawable/a9k"
               android:layout_centerVertical="true"
               />
       </RelativeLayout>
       <RelativeLayout
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="48dp">
         <Button
             android:layout_width="154dp"
             android:layout_height="36dp"
             android:background="@drawable/fb_tv_bg"
             android:text="登录"
             android:id="@+id/login_btn"
             android:textColor="@color/colorPrimary"
             android:textSize="18dp"

             />
           <ImageView
              android:layout_marginRight="5dp"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/a9d"
               android:padding="5dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:id="@+id/iv_right"
               />
           <TextView
               android:layout_toLeftOf="@+id/iv_right"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"

               android:gravity="center"
               android:text="没有账号？手机快速注册"
               android:textSize="12dp"
               />
       </RelativeLayout>
       <LinearLayout
           android:id="@+id/login"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="0dp"
               android:gravity="center"
               android:id="@+id/wx_login"
               android:layout_height="match_parent"
               android:layout_weight="1">

               <ImageView
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:padding="12dp"
                   android:src="@drawable/a95"
                   android:id="@+id/imageView" />

               <TextView
                   android:gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textColor="@color/colorWhite"
                   android:text="微信登录"
                   android:id="@+id/textView" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:gravity="center"
               android:id="@+id/wb_layout"
               android:layout_height="match_parent"
               android:layout_weight="1">
               <ImageView
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:src="@drawable/a93"
                   android:padding="12dp"
                   />
               <TextView
                   android:textColor="@color/colorWhite"
                   android:layout_width="wrap_content"
                   android:gravity="center"
                   android:layout_height="match_parent"
                   android:text="微博登录"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:gravity="center"
               android:id="@+id/qq_login"
               android:layout_weight="1">
               <ImageView
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:src="@drawable/a91"
                   android:padding="12dp"
                   />
               <TextView
                   android:gravity="center"
                   android:textColor="@color/colorWhite"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="QQ登录"/>
           </LinearLayout>
       </LinearLayout>

   </LinearLayout>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="56dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginTop="170dp"
    android:id="@+id/mine_layout"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center"
    >
    <LinearLayout
     android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我关注的"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的粉丝"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/mine_like"
        android:layout_below="@+id/mine_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:background="@color/colorWhite">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:gravity="center"
        >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_weight="1"
           >
           <ImageView
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:padding="4dp"
               android:src="@drawable/night_a9c"
               />
           <TextView
               android:gravity="center"
               android:layout_width="48dp"
               android:layout_height="wrap_content"
               android:text="阅读"
               />
       </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/night_a8r"
                android:padding="4dp"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="收藏"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                android:src="@drawable/night_a9i"
                />
            <TextView
                android:gravity="center"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="跟帖"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                android:src="@drawable/night_a8u"
                />
            <TextView
                android:gravity="center"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="金币"
                />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_below="@+id/mine_like"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/msg">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="48dp"

                  >
                  <ImageView
                      android:layout_width="48dp"
                      android:layout_height="48dp"
                      android:layout_marginLeft="5dp"
                      android:id="@+id/msg_iv"
                      android:padding="15dp"
                      android:src="@drawable/a97"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="我的消息"
                      android:gravity="center"
                      android:layout_toRightOf="@+id/msg_iv"/>
                  <ImageView
                      android:layout_alignParentRight="true"
                      android:layout_width="48dp"
                      android:padding="18dp"
                      android:layout_height="match_parent"
                      android:src="@drawable/night_a1x"/>
              </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"

                    >
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/msg_iv2"
                        android:padding="15dp"
                        android:src="@drawable/a8t"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="最新动态"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/msg_iv2"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="48dp"
                        android:padding="18dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/night_a1x"/>
                </RelativeLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="10dp"
                android:layout_height="170dp">
            <LinearLayout

                android:layout_width="match_parent"

                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"

                    >
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/msg_iv3"
                        android:padding="15dp"
                        android:src="@drawable/a8v"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="金币商城"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/msg_iv3"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="48dp"
                        android:padding="18dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/night_a1x"/>
                </RelativeLayout>
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"

                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/msg_iv4"
                    android:padding="4dp"
                    android:src="@drawable/a9j"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="我的钱包"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/msg_iv4"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="48dp"
                    android:padding="18dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/night_a1x"/>
            </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray">

                </View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"

                    >
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/msg_iv5"
                        android:padding="15dp"
                        android:src="@drawable/a9g"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="金币任务"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/msg_iv5"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="48dp"
                        android:padding="18dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/night_a1x"/>
                </RelativeLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_height="170dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"

                    >
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/msg_iv6"
                        android:padding="15dp"
                        android:src="@drawable/a98"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="夜间模式"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/msg_iv6"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="48dp"
                        android:padding="18dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/night_a1x"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"

                    >
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/msg_iv7"
                        android:padding="15dp"
                        android:src="@drawable/a9b"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="活动广场"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/msg_iv7"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="48dp"
                        android:padding="18dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/night_a1x"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"

                    >
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/msg_iv8"
                        android:padding="15dp"
                        android:src="@drawable/a8s"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="意见反馈"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/msg_iv8"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="48dp"
                        android:padding="18dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/night_a1x"/>
                </RelativeLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>