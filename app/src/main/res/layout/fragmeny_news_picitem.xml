<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:padding="12dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:id="@+id/img"/>
    <TextView
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="4dp"

        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:id="@+id/title"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/a6w"
            />
        <TextView
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/upTimes"
            />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/a6y"
            android:layout_toRightOf="@+id/upTimes"
            />
        <TextView
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/upTimes"
            android:layout_marginLeft="60dp"
            android:id="@+id/downTimes"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/a7v"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/share"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/replyCount"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/share"

            />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ae3"
            android:padding="12dp"
            android:layout_toLeftOf="@+id/replyCount"/>
    </RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>