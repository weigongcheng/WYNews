<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_live_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.news.live.LiveDetailsActivity">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/bar">
        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/back"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ra"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_toRightOf="@+id/back"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:text="123"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <io.vov.vitamio.widget.VideoView

            android:id="@+id/vv"
            android:layout_width="match_parent"
            android:layout_height="300dp"></io.vov.vitamio.widget.VideoView>
        <LinearLayout
            android:layout_alignTop="@+id/vv"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textColor="#FFF"
                android:textStyle="bold"
                android:id="@+id/current_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
            <TextView
                android:textColor="#FFF"
                android:textStyle="bold"
                android:id="@+id/net_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:id="@+id/close_web"
            android:layout_marginRight="10dp"
            android:src="@drawable/up"/>
        <android.support.design.widget.TabLayout
            app:tabGravity="center"
            android:id="@+id/tab_layout"
            android:layout_marginLeft="24dp"
            android:layout_toLeftOf="@+id/close_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMode="scrollable"
            app:tabTextColor="@color/colorGray"
            app:tabSelectedTextColor="@color/colorPrimary">

        </android.support.design.widget.TabLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/botton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            >
    <ImageView
    android:layout_width="48dp"
    android:layout_height="48dp"
        android:id="@+id/sendType"
        android:padding="5dp"
        android:src="@drawable/night_a9i"
        android:layout_marginLeft="15dp"
    />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:id="@+id/shareOrSend"
                android:src="@drawable/a7v"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/shareOrSend"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:hint="我来说两句"
                android:id="@+id/edit_keywords"
                android:layout_toRightOf="@+id/sendType"/>
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:layout_above="@+id/botton"
            android:layout_width="match_parent"
            android:id="@+id/viewpager"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </RelativeLayout>
</LinearLayout>
